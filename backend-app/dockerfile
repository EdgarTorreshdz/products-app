# Build stage
FROM node:18-alpine as builder
WORKDIR /app
COPY package*.json ./
COPY tsconfig.json ./
RUN npm install
COPY src/ ./src/
RUN npm run build

# Production stage
FROM node:18-alpine
WORKDIR /app

# Crear carpeta data para SQLite con permisos
RUN mkdir -p /app/data && chown -R node:node /app/data

# Copiar archivos
COPY package*.json ./
RUN npm install --only=production
COPY --from=builder /app/dist/ ./dist/

# Usar usuario node para seguridad
USER node

EXPOSE 3000

# Comando directo - m√°s confiable que "npm start"
CMD ["node", "dist/server.js"]